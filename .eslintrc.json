{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "plugins": ["jest"],
    "extends": ["airbnb-base", "prettier", "plugin:jest/recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "global-require": "off",
        "import/no-dynamic-require": "off",
        "no-underscore-dangle": "off",
        "no-param-reassign": "off",
        "class-methods-use-this": "off"
    }
}
